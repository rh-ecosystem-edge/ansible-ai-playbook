# grub.cfg
set default=0
set timeout=5

menuentry 'Install Openshift Asissted Installer' --class red --class gnu-linux --class gnu --class os {
        linux vmlinuz ip=dhcp ignition.firstboot ignition.platform.id=metal ignition.config.url=http://{{ HTTP_URL | default(ansible_default_ipv4.address) }}/pxe/config.ign coreos.live.rootfs_url=http://{{ HTTP_URL | default(ansible_default_ipv4.address) }}/pxe/rootfs.img ip=dhcp console=tty0 console=ttyS0,115200 console=ttyAMA1 console=hvc0 console=ttyAMA0 earlycon=pl011,0x01000000
        initrd initrd.img
}

menuentry 'Reboot' --class red --class gnu-linux --class gnu --class os {
        reboot
}